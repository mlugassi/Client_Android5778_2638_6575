<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lugassi.wallach.client_android5778_2638_6575">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.AddCustomer" />
        <activity android:name=".controller.AddUser" />
        <activity android:name=".controller.Login" />
        <activity
            android:name=".controller.MainNavigation"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".controller.DetectsCarReleasedService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".controller.MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="lugassi.wallach.FREE_CARS_CHANGED" />
                <action android:name="lugassi.wallach.ADD_CARS" />
                <action android:name="lugassi.wallach.REMOVE_CARS" />
                <action android:name="lugassi.wallach.RESERVATIONS_CHANGED" />
                <action android:name="lugassi.wallach.BRANCHES_CHANGED" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".controller.MyContentProvider"
            android:authorities="lugassi.wallach.MyContentProvider"
            android:enabled="true"
            android:exported="true"></provider>
    </application>

</manifest>